{
    "openapi": "3.0.0",
    "info": {
        "title": "Cart API",
        "version": "4.3.25",
        "description": "API for managing shopping carts"
    },
    "servers": [
        {
            "url": "{protocol}://{host}",
            "variables": {
                "protocol": {
                    "enum": ["http", "https"],
                    "default": "https"
                },
                "host": {
                    "default": "example-store.com",
                    "description": "Your store domain"
                }
            }
        }
    ],
    "security": [
        {
            "basicAuth": [],
            "bearerAuth": []
        }
    ],
    "paths": {
        "/cocart/v1/get-cart": {
            "get": {
                "summary": "Get cart contents",
                "operationId": "getCart",
                "security": {},
                "parameters": [
                    {
                        "name": "thumb",
                        "in": "query",
                        "description": "Include product thumbnail URLs",
                        "schema": {
                            "type": "boolean",
                            "default": false
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cart contents retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cart"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/cocart/v1/get-cart/{id}": {
            "get": {
                "summary": "Get cart in session",
                "operationId": "getCartInSession",
                "security": {},
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Cart session ID",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cart in session retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cart"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Cart session not found"
                    }
                }
            }
        },
        "/cocart/v1/get-cart/customer/{id}": {
            "get": {
                "summary": "Get customer's saved cart",
                "operationId": "getCustomerCart",
                "security": {},
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "Customer ID",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Customer's cart retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cart"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Customer not found"
                    }
                }
            }
        },
        "/cocart/v1/add-item": {
            "post": {
                "summary": "Add item to cart",
                "operationId": "addItem",
                "security": {},
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "product_id"
                                ],
                                "properties": {
                                    "product_id": {
                                        "type": "string",
                                        "description": "Product ID or SKU"
                                    },
                                    "quantity": {
                                        "type": "integer",
                                        "default": 1,
                                        "minimum": 1
                                    },
                                    "variation_id": {
                                        "type": "integer"
                                    },
                                    "variation": {
                                        "type": "object",
                                        "additionalProperties": true
                                    },
                                    "cart_item_data": {
                                        "type": "object",
                                        "additionalProperties": true
                                    },
                                    "return_cart": {
                                        "type": "boolean",
                                        "default": false
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Item added successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cart"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid product data"
                    },
                    "404": {
                        "description": "Product not found"
                    }
                }
            }
        },
        "/cocart/v1/item": {
            "post": {
                "summary": "Update cart item",
                "operationId": "updateItem",
                "parameters": [
                    {
                        "name": "cart_item_key",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "quantity"
                                ],
                                "properties": {
                                    "quantity": {
                                        "type": "integer",
                                        "minimum": 0
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Item updated successfully"
                    },
                    "404": {
                        "description": "Item not found in cart"
                    }
                }
            },
            "delete": {
                "summary": "Remove item from cart",
                "operationId": "removeItem",
                "parameters": [
                    {
                        "name": "cart_item_key",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Item removed successfully"
                    },
                    "404": {
                        "description": "Item not found in cart"
                    }
                }
            }
        },
        "/cocart/v1/clear": {
            "post": {
                "summary": "Clear cart",
                "operationId": "clearCart",
                "responses": {
                    "200": {
                        "description": "Cart cleared successfully"
                    }
                }
            }
        },
        "/cocart/v1/totals": {
            "get": {
                "summary": "Get cart totals",
                "operationId": "getTotals",
                "parameters": [
                    {
                        "name": "html",
                        "in": "query",
                        "schema": {
                            "type": "boolean",
                            "default": false
                        },
                        "description": "Return HTML formatted totals"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cart totals retrieved successfully"
                    }
                }
            }
        },
        "/cocart/v1/shipping-methods": {
            "get": {
                "summary": "Get available shipping methods",
                "parameters": [
                    {
                        "name": "recurring_cart_key",
                        "in": "query",
                        "description": "Required only for subscription shipping methods",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Available shipping methods",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "$ref": "#/components/schemas/ShippingMethod"
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Shipping not enabled"
                    },
                    "404": {
                        "description": "No shipping methods available"
                    }
                }
            },
            "post": {
                "summary": "Set shipping method",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["key"],
                                "properties": {
                                    "key": {
                                        "type": "string"
                                    },
                                    "recurring_cart_key": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Shipping method set successfully"
                    },
                    "404": {
                        "description": "Invalid shipping method"
                    }
                }
            }
        },
        "/cocart/v1/removed-items": {
            "get": {
                "summary": "Get removed cart items",
                "responses": {
                    "200": {
                        "description": "List of removed items",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Cart"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/cocart/v1/quantities": {
            "get": {
                "summary": "Get cart item quantities",
                "responses": {
                    "200": {
                        "description": "Cart item quantities",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/cocart/v1/payment-methods": {
            "get": {
                "summary": "Get available payment methods",
                "responses": {
                    "200": {
                        "description": "List of payment methods",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "$ref": "#/components/schemas/PaymentMethod"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Set payment method",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["gateway_id"],
                                "properties": {
                                    "gateway_id": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Payment method set successfully"
                    },
                    "404": {
                        "description": "Invalid payment method"
                    }
                }
            }
        },
        "/cocart/v1/fees": {
            "get": {
                "summary": "Get cart fees",
                "responses": {
                    "200": {
                        "description": "List of cart fees",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Fee"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Add fee",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["name", "amount"],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "amount": {
                                        "type": "string"
                                    },
                                    "taxable": {
                                        "type": "boolean",
                                        "default": false
                                    },
                                    "tax_class": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Fee added successfully"
                    }
                }
            },
            "delete": {
                "summary": "Remove all fees",
                "responses": {
                    "200": {
                        "description": "Fees removed successfully"
                    }
                }
            }
        },
        "/cocart/v1/customer": {
            "get": {
                "summary": "Get cart customer details",
                "responses": {
                    "200": {
                        "description": "Customer details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Customer"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/cocart/v1/cross-sells": {
            "get": {
                "summary": "Get cross-sell products",
                "parameters": [
                    {
                        "name": "thumb",
                        "in": "query",
                        "schema": {
                            "type": "boolean",
                            "default": false
                        },
                        "description": "Include product thumbnail URLs"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of cross-sell products",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "$ref": "#/components/schemas/CrossSellProduct"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/cocart/v1/coupon": {
            "get": {
                "summary": "Get applied coupons",
                "responses": {
                    "200": {
                        "description": "List of applied coupons",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Apply coupon",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["coupon"],
                                "properties": {
                                    "coupon": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Coupon applied successfully"
                    },
                    "404": {
                        "description": "Invalid coupon"
                    }
                }
            },
            "delete": {
                "summary": "Remove coupon",
                "parameters": [
                    {
                        "name": "coupon",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Coupon removed successfully"
                    },
                    "404": {
                        "description": "Coupon not found"
                    }
                }
            }
        },
        "/cocart/v1/calculate": {
            "post": {
                "summary": "Calculate cart totals",
                "parameters": [
                    {
                        "name": "return",
                        "in": "query",
                        "schema": {
                            "type": "boolean",
                            "default": false
                        },
                        "description": "Return calculated totals"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cart totals calculated"
                    }
                }
            }
        },
        "/cocart/v1/calculate/shipping": {
            "post": {
                "summary": "Calculate shipping",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["country"],
                                "properties": {
                                    "country": {
                                        "type": "string"
                                    },
                                    "state": {
                                        "type": "string"
                                    },
                                    "city": {
                                        "type": "string"
                                    },
                                    "postcode": {
                                        "type": "string"
                                    },
                                    "return_methods": {
                                        "type": "boolean",
                                        "default": false
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Shipping calculated successfully"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic",
                "description": "Basic authentication with username and password (optional)"
            },
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Cart": {
                "type": "object",
                "properties": {
                    "items": {
                        "type": "object",
                        "additionalProperties": {
                            "$ref": "#/components/schemas/CartItem"
                        }
                    }
                }
            },
            "CartItem": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string",
                        "description": "Unique identifier for the item within the cart"
                    },
                    "product_id": {
                        "type": "integer",
                        "description": "Unique identifier for the product"
                    },
                    "variation_id": {
                        "type": "integer",
                        "description": "Unique identifier for the variation if the product is a variable product"
                    },
                    "variation": {
                        "type": "object",
                        "description": "Selected attributes for variable products",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "quantity": {
                        "type": "integer",
                        "description": "Quantity of this item in the cart",
                        "minimum": 0
                    },
                    "line_tax_data": {
                        "type": "object",
                        "description": "Line item tax data",
                        "properties": {
                            "subtotal": {
                                "type": "array",
                                "description": "Line item tax subtotal data",
                                "items": {
                                    "type": "number"
                                }
                            },
                            "total": {
                                "type": "array",
                                "description": "Line item tax total data",
                                "items": {
                                    "type": "number"
                                }
                            }
                        }
                    },
                    "line_subtotal": {
                        "type": "number",
                        "description": "Line subtotal (price before discounts)"
                    },
                    "line_subtotal_tax": {
                        "type": "number",
                        "description": "Line subtotal tax"
                    },
                    "line_total": {
                        "type": "number",
                        "description": "Line total (price after discounts)"
                    },
                    "line_tax": {
                        "type": "number",
                        "description": "Line item tax total"
                    },
                    "data": {
                        "type": "object",
                        "description": "Product data",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Product name"
                            },
                            "type": {
                                "type": "string",
                                "description": "Product type (simple, variable, etc.)"
                            },
                            "sku": {
                                "type": "string",
                                "description": "Product SKU"
                            },
                            "price": {
                                "type": "number",
                                "description": "Current product price"
                            },
                            "regular_price": {
                                "type": "number",
                                "description": "Product regular price"
                            },
                            "sale_price": {
                                "type": "number",
                                "description": "Product sale price if on sale"
                            }
                        }
                    },
                    "product_name": {
                        "type": "string",
                        "description": "Name of the product"
                    },
                    "product_title": {
                        "type": "string",
                        "description": "Title of the product"
                    },
                    "product_price": {
                        "type": "string",
                        "description": "Formatted product price with currency symbol"
                    },
                    "product_image": {
                        "type": "string",
                        "description": "URL of the product image (if thumb parameter is true)"
                    }
                }
            },
            "ShippingMethod": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "method_id": {
                        "type": "string"
                    },
                    "instance_id": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "cost": {
                        "type": "number"
                    },
                    "html": {
                        "type": "string"
                    },
                    "taxes": {
                        "type": "object"
                    },
                    "chosen_method": {
                        "type": "boolean"
                    }
                }
            },
            "PaymentMethod": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "method_title": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "icon": {
                        "type": "string"
                    },
                    "icon_urls": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "has_fields": {
                        "type": "boolean"
                    }
                }
            },
            "Fee": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "amount": {
                        "type": "number"
                    },
                    "taxable": {
                        "type": "boolean"
                    },
                    "tax_class": {
                        "type": "string"
                    }
                }
            },
            "Customer": {
                "type": "object",
                "properties": {
                    "user": {
                        "type": "object"
                    },
                    "billing": {
                        "type": "object"
                    },
                    "shipping": {
                        "type": "object"
                    },
                    "has_calculated_shipping": {
                        "type": "boolean"
                    },
                    "is_vat_exempt": {
                        "type": "string"
                    }
                }
            },
            "CrossSellProduct": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "product_name": {
                        "type": "string"
                    },
                    "product_title": {
                        "type": "string"
                    },
                    "price": {
                        "type": "string"
                    },
                    "regular_price": {
                        "type": "string"
                    },
                    "sale_price": {
                        "type": "string"
                    },
                    "product_image": {
                        "type": "string"
                    }
                }
            }
        }
    }
}