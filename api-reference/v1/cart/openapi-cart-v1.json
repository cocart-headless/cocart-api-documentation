{
    "openapi": "3.0.0",
    "info": {
        "title": "Cart API",
        "version": "4.3.29",
        "description": "API for managing shopping carts"
    },
    "servers": [
        {
            "url": "{protocol}://{host}",
            "variables": {
                "protocol": {
                    "enum": ["http", "https"],
                    "default": "https"
                },
                "host": {
                    "default": "example-store.com",
                    "description": "Your store domain"
                }
            }
        }
    ],
    "security": [
        {
            "basicAuth": [],
            "bearerAuth": []
        }
    ],
    "paths": {
        "/cocart/v1/get-cart": {
            "get": {
                "summary": "Get cart contents",
                "description": "Gets the cart items added by the customer.",
                "parameters": [
                    {
                        "name": "thumb",
                        "in": "query",
                        "description": "Returns the URL of the product image thumbnail.",
                        "schema": {
                            "type": "boolean",
                            "default": false
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of cart items.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Cart"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "basicAuth": {
                "type": "http",
                "scheme": "basic",
                "description": "Basic authentication with username and password (optional)"
            },
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "Cart": {
                "type": "object",
                "$ref": "#/components/schemas/CartItem"
            },
            "CartItem": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string",
                        "description": "Unique identifier for the item within the cart"
                    },
                    "product_id": {
                        "type": "integer",
                        "description": "Unique identifier for the product"
                    },
                    "variation_id": {
                        "type": "integer",
                        "description": "Unique identifier for the variation if the product is a variable product"
                    },
                    "variation": {
                        "type": "object",
                        "description": "Selected attributes for variable products",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "quantity": {
                        "type": "integer",
                        "description": "Quantity of this item in the cart",
                        "minimum": 0
                    },
                    "line_tax_data": {
                        "type": "object",
                        "description": "Line item tax data",
                        "properties": {
                            "subtotal": {
                                "type": "array",
                                "description": "Line item tax subtotal data",
                                "items": {
                                    "type": "number"
                                }
                            },
                            "total": {
                                "type": "array",
                                "description": "Line item tax total data",
                                "items": {
                                    "type": "number"
                                }
                            }
                        }
                    },
                    "line_subtotal": {
                        "type": "number",
                        "description": "Line subtotal (price before discounts)"
                    },
                    "line_subtotal_tax": {
                        "type": "number",
                        "description": "Line subtotal tax"
                    },
                    "line_total": {
                        "type": "number",
                        "description": "Line total (price after discounts)"
                    },
                    "line_tax": {
                        "type": "number",
                        "description": "Line item tax total"
                    },
                    "data": {
                        "type": "object",
                        "description": "Product data",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Product name"
                            },
                            "type": {
                                "type": "string",
                                "description": "Product type (simple, variable, etc.)"
                            },
                            "sku": {
                                "type": "string",
                                "description": "Product SKU"
                            },
                            "price": {
                                "type": "number",
                                "description": "Current product price"
                            },
                            "regular_price": {
                                "type": "number",
                                "description": "Product regular price"
                            },
                            "sale_price": {
                                "type": "number",
                                "description": "Product sale price if on sale"
                            }
                        }
                    },
                    "product_name": {
                        "type": "string",
                        "description": "Name of the product"
                    },
                    "product_title": {
                        "type": "string",
                        "description": "Title of the product"
                    },
                    "product_price": {
                        "type": "string",
                        "description": "Formatted product price with currency symbol"
                    },
                    "product_image": {
                        "type": "string",
                        "description": "URL of the product image (if thumb parameter is true)"
                    }
                }
            }
        }
    }
}